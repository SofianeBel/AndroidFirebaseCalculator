<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Couche de fond avec dégradé -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primary_light"
                android:endColor="@color/white"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Couche d'ombre légère -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#10000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Couche principale -->
    <item android:bottom="2dp" android:right="2dp" android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F8F8F8"
                android:endColor="@color/white"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#20000000" />
        </shape>
    </item>
</layer-list> 