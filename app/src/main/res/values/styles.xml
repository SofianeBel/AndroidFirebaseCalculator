<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style de base pour l'application -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>
    
    <!-- Style pour les boutons de la calculatrice -->
    <style name="CalculatorButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="backgroundTint">@color/button_background</item>
    </style>
    
    <!-- Style pour les boutons d'opération -->
    <style name="OperatorButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/operator_background</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Style pour le bouton égal -->
    <style name="EqualsButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/equals_background</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:elevation">8dp</item>
    </style>
    
    <!-- Style pour le bouton d'effacement -->
    <style name="ClearButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/clear_background</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Style pour l'affichage du résultat -->
    <style name="ResultDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/result_background</item>
        <item name="android:elevation">2dp</item>
    </style>
    
    <!-- Style pour les cartes d'historique -->
    <style name="HistoryCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
</resources>